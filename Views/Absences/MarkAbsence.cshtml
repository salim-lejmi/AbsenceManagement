@model Absence.ViewModels.MarkAbsenceViewModel

<h2>Mark Absences</h2>

<form asp-action="MarkAbsence" method="post">
    <div>
        <h4>Date</h4>
        <input type="date" asp-for="Date" class="form-control" />
    </div>

    <div>
        <h4>Select Class</h4>
        <select asp-for="SelectedClassId" asp-items="@(new SelectList(Model.Classes, "CodeClasse", "NomClasse"))" class="form-control">
            <option value="">-- Select Class --</option>
        </select>
    </div>

    <div>
        <h4>Select Subject</h4>
        <select asp-for="SelectedSubjectId" asp-items="@(new SelectList(Model.Matieres, "CodeMatiere", "NomMatiere"))" class="form-control">
            <option value="">-- Select Subject --</option>
        </select>
    </div>

    <table>
        <thead>
            <tr>
                <th>Student</th>
                <th>Absent?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Classes.SelectMany(c => c.Etudiants))
            {
                <tr>
                    <td>@student.Nom</td>
                    <td>
                        <input type="checkbox" name="Absences[@student.CodeEtudiant].IsAbsent" />
                        <input type="hidden" name="Absences[@student.CodeEtudiant].StudentId" value="@student.CodeEtudiant" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit">Submit</button>
</form>