@model Absence.ViewModels.MarkAbsenceViewModel

<h2>Mark Absences</h2>

<form asp-action="MarkAbsence" method="post">
    <div class="form-group">
        <label>Date</label>
        <input type="date" asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select Class</label>
        <select asp-for="SelectedClassId"
                asp-items="@(new SelectList(Model.Classes, "CodeClasse", "NomClasse"))"
                class="form-control">
            <option value="">-- Select Class --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Select Subject</label>
        <select asp-for="SelectedSubjectId"
                asp-items="@(new SelectList(Model.Matieres, "CodeMatiere", "NomMatiere"))"
                class="form-control">
            <option value="">-- Select Subject --</option>
        </select>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Student</th>
                <th>Absent?</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Absences.Count; i++)
            {
                <tr>
                    <td>@Model.Classes.SelectMany(c => c.Etudiants).ElementAt(i).Nom</td>
                    <td>
                        <input type="hidden" asp-for="@Model.Absences[i].StudentId" />
                        <input type="checkbox" asp-for="@Model.Absences[i].IsAbsent" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>