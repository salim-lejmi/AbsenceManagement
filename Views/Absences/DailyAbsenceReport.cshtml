@model Absence.ViewModels.DailyAbsenceReportViewModel

@{
    ViewData["Title"] = "Daily Absence Report";
}

<div class="container mt-4">
    <h2>Daily Absence Report</h2>
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="form-inline">
                <div class="input-group">
                    <label class="input-group-text">Select Date:</label>
                    <select class="form-select" name="date" onchange="this.form.submit()">
                        @foreach (var date in ViewBag.WeekDates)
                        {
                            <option value="@date.ToString("yyyy-MM-dd")" selected="@(date.Date == Model.Date.Date)">
                                @date.ToString("dddd, MMMM dd, yyyy")
                            </option>
                        }
                    </select>

                </div>
            </form>
        </div>
    </div>

    @if (!Model.AbsenceDetails.Any())
    {
        <div class="alert alert-info">
            No absences recorded for @Model.Date.ToString("dddd, MMMM dd, yyyy")
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Student Name</th>
                        <th>Class</th>
                        <th>Subject</th>
                        <th>Session</th>
                        <th>Teacher</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var absence in Model.AbsenceDetails)
                    {
                        <tr>
                            <td>@absence.StudentName</td>
                            <td>@absence.ClassName</td>
                            <td>@absence.SubjectName</td>
                            <td>@absence.SeanceName</td>
                            <td>@absence.TeacherName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                Total Absences: @Model.AbsenceDetails.Count
            </p>
        </div>
    }
</div>