@model List<Absence.ViewModels.AbsenceDetailsViewModel>

<h2>Your Absences</h2>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Seance</th>
            <th>Teacher</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <tr>
                <td>@detail.Date.ToShortDateString()</td>
                <td>@detail.SeanceName</td>
                <td>@detail.TeacherName</td>
            </tr>
        }
    </tbody>
</table>