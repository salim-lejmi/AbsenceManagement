@model List<Absence.ViewModels.StudentAbsenceReportViewModel>

<div class="container mt-4">
    <h2>Absence Report</h2>
    <form asp-action="AbsenceReport" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <input type="date" name="startDate" id="startDate" class="form-control"
                           value="@ViewBag.StartDate" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="endDate">End Date</label>
                    <input type="date" name="endDate" id="endDate" class="form-control"
                           value="@ViewBag.EndDate" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="classeId">Class</label>
                    <select name="classeId" id="classeId" class="form-control">
                        <option value="">-- Select Class --</option>
                        @foreach (var classe in ViewBag.Classes)
                        {
                            @if (ViewBag.SelectedClassId != null && ViewBag.SelectedClassId.ToString() == classe.Value)
                            {
                                <option value="@classe.Value" selected>@classe.Text</option>
                            }
                            else
                            {
                                <option value="@classe.Value">@classe.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="studentId">Student</label>
                    <select name="studentId" id="studentId" class="form-control">
                        <option value="">-- Select Student --</option>
                        @foreach (var student in ViewBag.Students)
                        {
                            @if (ViewBag.SelectedStudentId != null && ViewBag.SelectedStudentId.ToString() == student.Value)
                            {
                                <option value="@student.Value" selected>@student.Text</option>
                            }
                            else
                            {
                                <option value="@student.Value">@student.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Generate Report</button>
            </div>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Class</th>
                        <th>Number of Absences</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.StudentName</td>
                            <td>@report.ClassName</td>
                            <td>@report.AbsenceCount</td>
                            <td>
                                <a href="@Url.Action("AbsenceDetails", new { studentId = report.StudentId })"
                                   class="btn btn-info btn-sm">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Context.Request.Query.Count > 0)
    {
        <div class="alert alert-info">
            No absences found for the selected criteria.
        </div>
    }
</div>
