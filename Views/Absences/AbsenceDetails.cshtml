@model List<Absence.ViewModels.AbsenceDetailsViewModel>

<div class="container mt-4">

    <h2>Détails des absences pour @ViewBag.StudentName</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Séance</th>
                        <th>Enseignant</th>
                        <th>Matière</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model)
                    {
                        <tr>
                            <td>@detail.Date.ToShortDateString()</td>
                            <td>@detail.SeanceName</td>
                            <td>@detail.TeacherName</td>
                            <td>@detail.SubjectName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Aucune absence trouvée pour cet étudiant.
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("AbsenceReport")" class="btn btn-secondary">Retour au rapport</a>
    </div>
</div>
