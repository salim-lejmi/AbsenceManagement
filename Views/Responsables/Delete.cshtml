@model Absence.Models.T_Responsable

<h2>Delete Responsable</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Responsable Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Nom</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Prenom</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Mail</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodeResponsable" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
