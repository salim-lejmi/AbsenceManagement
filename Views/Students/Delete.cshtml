@model Absence.Models.T_Etudiant

<h2>Delete Student</h2>
<p>Are you sure you want to delete the student <strong>@Model.Nom @Model.Prenom</strong>?</p>

<form asp-action="Delete" asp-route-id="@Model.CodeEtudiant" method="post">
    <input type="hidden" asp-for="CodeEtudiant" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
