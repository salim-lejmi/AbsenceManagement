@model Absence.Models.T_Etudiant

<h2>Create Student</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom">First Name</label>
        <input asp-for="Nom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prenom">Last Name</label>
        <input asp-for="Prenom" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mail">Email</label>
        <input asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tel">Phone</label>
        <input asp-for="Tel" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CodeClasse">Class</label>
        <select asp-for="CodeClasse" asp-items="@(new SelectList(ViewData["Classes"] as List<Absence.Models.T_Classe>, "CodeClasse", "NomClasse"))" class="form-control">
            <option value="">Select Class</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>