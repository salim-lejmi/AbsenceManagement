@model Absence.Models.T_Etudiant
<h2>Créer étudiant</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom" class="required">Nom</label>
        <input asp-for="Nom" class="form-control" required />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prenom" class="required">Prenom</label>
        <input asp-for="Prenom" class="form-control" required />
        <span asp-validation-for="Prenom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateNaissance" class="required">Date de naissance</label>
        <input asp-for="DateNaissance" type="date" class="form-control" required />
        <span asp-validation-for="DateNaissance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumInscription" class="required">Numéro d'inscription</label>
        <input asp-for="NumInscription" class="form-control" required />
        <span asp-validation-for="NumInscription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adresse" class="required">Adresse</label>
        <input asp-for="Adresse" class="form-control" required />
        <span asp-validation-for="Adresse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mail">Email</label>
        <input asp-for="Mail" class="form-control" type="email" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tel">Téléphone</label>
        <input asp-for="Tel" class="form-control" />
        <span asp-validation-for="Tel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CodeClasse" class="required">Classe</label>
        <select asp-for="CodeClasse" asp-items="@(new SelectList(ViewData["Classes"] as List<Absence.Models.T_Classe>, "CodeClasse", "NomClasse"))" class="form-control" required>
            <option value="">Sélectionnez la classe</option>
        </select>
        <span asp-validation-for="CodeClasse" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
</form>
