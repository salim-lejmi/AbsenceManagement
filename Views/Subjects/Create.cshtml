@model Absence.Models.T_Matiere

<h2>Créer Matière</h2>

<form asp-action="Create" asp-controller="Subjects" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NomMatiere" class="control-label">Nom de la matière</label>
        <input asp-for="NomMatiere" class="form-control" />
        <span asp-validation-for="NomMatiere" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NbrHeureCoursParSemaine" class="control-label">Heures de cours/semaine</label>
        <input asp-for="NbrHeureCoursParSemaine" class="form-control" type="number" />
        <span asp-validation-for="NbrHeureCoursParSemaine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NbrHeureTDParSemaine" class="control-label">Heures de TD/semaine</label>
        <input asp-for="NbrHeureTDParSemaine" class="form-control" type="number" />
        <span asp-validation-for="NbrHeureTDParSemaine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NbrHeureTPParSemaine" class="control-label">Heures de TP/semaine</label>
        <input asp-for="NbrHeureTPParSemaine" class="form-control" type="number" />
        <span asp-validation-for="NbrHeureTPParSemaine" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Créer" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
