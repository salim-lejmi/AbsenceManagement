@model Absence.Models.T_Matiere

<h2>Supprimer Matière</h2>
<p>Êtes-vous sûr de vouloir supprimer la matière <strong>@Model.NomMatiere</strong> ?</p>

<form asp-action="Delete" asp-route-id="@Model.CodeMatiere" method="post">
    <input type="hidden" asp-for="CodeMatiere" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
