@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .dashboard-header {
        padding: 2rem 0;
        background: linear-gradient(135deg, #0d6efd 0%, #0099ff 100%);
        margin: -1.5rem -12px 2rem -12px;
        color: white;
        border-radius: 0 0 20px 20px;
    }

    .action-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
        border: none;
        overflow: hidden;
    }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .action-link {
        display: block;
        padding: 1.5rem;
        text-decoration: none;
        color: #333;
        transition: all 0.3s ease;
    }

        .action-link:hover {
            color: #0d6efd;
        }

    .action-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #0d6efd;
    }

    .action-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .action-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin: 0;
    }

    .no-access-message {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 15px;
        text-align: center;
        color: #6c757d;
    }
</style>

<div class="dashboard-header text-center">
    <h1 class="display-4 mb-2">Welcome to Absence Management System</h1>
    <p class="lead mb-0">Manage your academic absences efficiently</p>
</div>

<div class="container">
    <div class="row">
        @if (Context.Session.GetString("UserType") == "Admin")
        {
            <div class="col-md-4">
                <div class="action-card">
                    <a asp-controller="Students" asp-action="Index" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">👥</div>
                            <h3 class="action-title">Manage Students</h3>
                            <p class="action-description">Add, edit, or remove student records</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="action-card">
                    <a asp-controller="Teachers" asp-action="Index" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">👨‍🏫</div>
                            <h3 class="action-title">Manage Teachers</h3>
                            <p class="action-description">Oversee teacher information and assignments</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="action-card">
                    <a asp-controller="Responsables" asp-action="Index" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">👥</div>
                            <h3 class="action-title">Manage Responsables</h3>
                            <p class="action-description">Handle responsable assignments</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="action-card">
                    <a asp-controller="Subjects" asp-action="Index" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">📚</div>
                            <h3 class="action-title">Manage Subjects</h3>
                            <p class="action-description">Configure subjects and courses</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="action-card">
                    <a asp-controller="Absences" asp-action="DailyAbsenceReport" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">📊</div>
                            <h3 class="action-title">Daily Absence Report</h3>
                            <p class="action-description">View today's absence statistics</p>
                        </div>
                    </a>
                </div>
            </div>
        }
        else if (Context.Session.GetString("UserType") == "Responsable")
        {
            <div class="col-md-6">
                <div class="action-card">
                    <a asp-controller="Students" asp-action="Index" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">👥</div>
                            <h3 class="action-title">Manage Students</h3>
                            <p class="action-description">View and manage student information</p>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="action-card">
                    <a asp-controller="Absences" asp-action="AbsenceReport" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">📊</div>
                            <h3 class="action-title">Absence Report</h3>
                            <p class="action-description">View detailed absence reports</p>
                        </div>
                    </a>
                </div>
            </div>
        }
        else if (Context.Session.GetString("UserType") == "Teacher")
        {
            <div class="col-md-6">
                <div class="action-card">
                    <a asp-controller="Absences" asp-action="MarkAbsence" class="action-link">
                        <div class="text-center">
                            <div class="action-icon">✍️</div>
                            <h3 class="action-title">Mark Absences</h3>
                            <p class="action-description">Record student attendance</p>
                        </div>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="no-access-message">
                    <div class="action-icon mb-3">🔒</div>
                    <h3>Limited Access</h3>
                    <p>You do not have access to any management actions. Please contact your administrator if you believe this is an error.</p>
                </div>
            </div>
        }
    </div>
</div>